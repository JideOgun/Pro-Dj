{
  "name": "pro-dj",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "prisma generate",
    "dev": "node --max-old-space-size=4096 server.js",
    "build": "prisma generate && next build",
    "start": "NODE_ENV=production node --max-old-space-size=4096 server.js",
    "lint": "next lint",
    "seed": "tsx prisma/seed.ts",
    "cleanup": "node --expose-gc scripts/memory-cleanup.js",
    "migrate-tax-data": "tsx scripts/migrate-tax-data.ts",
    "db:migrate": "npx prisma migrate deploy",
    "db:generate": "npx prisma generate",
    "db:reset": "npx prisma migrate reset --force",
    "production:setup": "npm run db:generate && npm run db:migrate && npm run seed",
    "production:start": "NODE_ENV=production npm run production:setup && npm start",
    "docker:build": "docker build -t pro-dj .",
    "docker:run": "docker run -p 3000:3000 --env-file .env pro-dj",
    "vercel:deploy": "vercel --prod"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.864.0",
    "@aws-sdk/s3-request-presigner": "^3.864.0",
    "@fullcalendar/core": "^6.1.19",
    "@fullcalendar/daygrid": "^6.1.19",
    "@fullcalendar/interaction": "^6.1.19",
    "@fullcalendar/react": "^6.1.19",
    "@fullcalendar/timegrid": "^6.1.19",
    "@prisma/client": "^6.13.0",
    "@types/multer": "^2.0.0",
    "@types/sharp": "^0.31.1",
    "apexcharts": "^5.3.3",
    "bcryptjs": "^3.0.2",
    "date-fns": "^4.1.0",
    "ffmpeg-static": "^5.2.0",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.539.0",
    "multer": "^2.0.2",
    "next": "15.4.6",
    "next-auth": "^4.24.11",
    "next-pwa": "^5.6.0",
    "nodemailer": "^6.10.1",
    "react": "19.1.0",
    "react-apexcharts": "^1.7.0",
    "react-dom": "19.1.0",
    "react-hot-toast": "^2.5.2",
    "react-image-crop": "^11.0.10",
    "react-player": "^3.3.1",
    "resend": "^6.0.1",
    "sharp": "^0.34.3",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "stripe": "^18.4.0",
    "wavesurfer.js": "^7.10.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "prisma": "^6.13.0",
    "tailwindcss": "^4",
    "tsx": "^4.20.3",
    "typescript": "^5"
  }
}
